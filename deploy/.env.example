# Production Environment Variables
# Copy this to .env and fill in actual values

# GitHub repository for Docker image
GITHUB_REPOSITORY=your-org/ontology-hub

# Database
POSTGRES_PASSWORD=your-secure-password-here

# CORS (comma-separated origins, or leave empty for same-origin only)
CORS_ORIGINS=https://ontology-hub.yourdomain.com

# GitHub API (for ontology repo sync)
GITHUB_TOKEN=ghp_your_token
GITHUB_REPO_OWNER=labki-org
GITHUB_REPO_NAME=labki-ontology
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret

# Session security (generate with: openssl rand -hex 32)
SESSION_SECRET=your-32-byte-hex-secret

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://ontology-hub.yourdomain.com
